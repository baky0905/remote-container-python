{
  "name": "Python 3.7 data science container",
  "dockerFile": "Dockerfile",
  "appPort": [8050, 9000],
  // Set *default* container specific settings.json values on container create.
  "settings": {
    // ---------------- EDITOR SETTINGS
    "editor.acceptSuggestionOnEnter": "off",
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 5,
    "editor.cursorBlinking": "solid",
    "editor.fontWeight": "500",
    // "editor.fontFamily": "Fira Code",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    // "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "editor.lineHeight": 22,
    "editor.letterSpacing": 0.5,
    "editor.minimap.enabled": false,
    "editor.parameterHints.enabled": true,
    "editor.renderWhitespace": "selection",
    "editor.renderControlCharacters": true,
    "editor.snippetSuggestions": "bottom",
    "editor.suggestOnTriggerCharacters": true,
    "editor.suggest.localityBonus": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "on",
    "editor.wordBasedSuggestions": false,
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": false
    },
    "editor.quickSuggestionsDelay": 2,
    "editor.tokenColorCustomizations": {
      "comments": "#aaa",
      "types": "#f66",
      "textMateRules": [
        {
          "scope": "variable.parameter",
          "settings": {
            "fontStyle": "bold",
            "foreground": "#FF0000"
          }
        }
      ],
      "functions": {
        "fontStyle": "italic"
      }
    },
    // ---------------- WORKBENCH SETTINGS
    "workbench.colorTheme": "SynthWave '84",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.sideBar.location": "right",
    "workbench.settings.editor": "json",
    "workbench.startupEditor": "none",
    "workbench.colorCustomizations": {
      "contrastActiveBorder": "#0ff"
    },
    // ---------------- EXPLORER SETTINGS
    "explorer.openEditors.visible": 0,
    "breadcrumbs.enabled": true,
    "peacock.favoriteColors": [
      {
        "name": "Angular Red",
        "value": "#b52e31"
      },
      {
        "name": "Auth0 Orange",
        "value": "#eb5424"
      },
      {
        "name": "Azure Blue",
        "value": "#007fff"
      },
      {
        "name": "C# Purple",
        "value": "#68217A"
      },
      {
        "name": "Gatsby Purple",
        "value": "#639"
      },
      {
        "name": "Go Cyan",
        "value": "#5dc9e2"
      },
      {
        "name": "Java Blue-Gray",
        "value": "#557c9b"
      },
      {
        "name": "JavaScript Yellow",
        "value": "#f9e64f"
      },
      {
        "name": "Mandalorian Blue",
        "value": "#1857a4"
      },
      {
        "name": "Node Green",
        "value": "#215732"
      },
      {
        "name": "React Blue",
        "value": "#00b3e6"
      },
      {
        "name": "Something Different",
        "value": "#832561"
      },
      {
        "name": "Vue Green",
        "value": "#42b883"
      }
    ],
    // ---------------- DEBUG
    "debug.internalConsoleOptions": "neverOpen",
    // ---------------- PYTHON DATASCIENCE
    //"python.dataScience.askForKernelRestart": true,
    "python.dataScience.alwaysScrollOnNewCell": true,
    "python.dataScience.colorizeInputBox": true,
    "python.dataScience.decorateCells": true,
    //"python.dataScience.sendSelectionToInteractiveWindow": true,
    // ---------------- PYTHON
    "python.pythonPath": "/opt/venv/bin/python",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.languageServer": "Pylance",
    // ---------------- EXTENSIONS
    "extensions.ignoreRecommendations": false,
    // ---------------- REST
    "terminal.integrated.shell.linux": "/bin/bash",
    "window.zoomLevel": 0,
    // ---------------- GIT
    "git.path": "/usr/bin/git"
  },
  // Use 'postCreateCommand' to run commands after the container is created.
  //"postCreateCommand": "pip3 install -r requirements.txt",
  // Add the IDs of extensions you want installed when the container is created.
  "extensions": [
    "esben.prettier-vscode",
    "equinusocio.vsc-community-material-theme",
    "ms-azuretools.vscode-docker",
    "mhutchie.git-graph",
    "eamodio.gitlens",
    "ecmel.vscode-html-css",
    "tht13.html-preview-vscode",
    "ritwickdey.liveserver",
    "yzhang.markdown-all-in-one",
    "pkief.material-icon-theme",
    "equinusocio.vsc-material-theme",
    "johnpapa.vscode-peacock",
    "esbenp.prettier-vscode",
    "alefragnani.project-manager",
    "ms-python.python",
    "kevinrose.vsc-python-indent",
    "natqe.reload",
    "ms-vscode-remote.remote-containers",
    "ms-vscode-remote.remote-wsl",
    "humao.rest-client",
    "shan.code-settings-sync",
    "robbowen.synthwave-vscode",
    "visualstudioexptteam.vscodeintellicode",
    "vscode-icons-team.vscode-icons",
    "formulahendry.code-runner",
    "formulahendry.vscode-mysql",
    "alexcvzz.vscode-sqlite",
    "coenraads.bracket-pair-colorizer-2",
    "oderwat.indent-rainbow",
    "njpwerner.autodocstring",
    "almenon.arepl",
    "ms-python.vscode-pylance",
    "github.vscode-pull-request-github"
  ]
  // Comment out to connect as root instead.
  //"remoteUser": "user"
}
